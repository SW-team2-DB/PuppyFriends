<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".SettingDetailInfoActivity">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="견주가 작성한 정보입니다"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dog_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="반려견 정보"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dog_name_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dog_info_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="이름"
            android:text="(공백)" />

        <EditText
            android:id="@+id/dog_breed_inp_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dog_name_inp_txt"
            android:layout_marginLeft="10dp"
            android:hint="견종"
            android:text="(공백)" />

        <EditText
            android:id="@+id/dog_age_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_name_inp_txt"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/dog_breed_inp_txt"
            android:hint="나이"
            android:text="(공백)" />

        <TextView
            android:id="@+id/owner_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dog_breed_inp_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="견주 정보"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_name_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_info_txt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="이름"
            android:text="(공백)" />


        -<RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/radio_btn_group" android:layout_below="@+id/user_name_inp_txt">

        <RadioButton
            android:id="@+id/male_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="false"
            android:hint="남" />

        <RadioButton
            android:id="@+id/female_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="false"
            android:hint="여" />

    </RadioGroup>

        <EditText
            android:id="@+id/user_age_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_inp_txt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/radio_btn_group"
            android:hint="나이"
            android:text="(공백)" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_btn_group"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="반려견을 위탁하고 싶은 위치"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />


        -<RadioGroup android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/loc_radio_btn_group" android:layout_below="@+id/location_txt">

        <RadioButton
            android:id="@+id/loc1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:enabled="false"
            android:hint="대덕구" />

        <RadioButton
            android:id="@+id/loc2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:enabled="false"
            android:hint="유성구" />

        <RadioButton
            android:id="@+id/loc3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:enabled="false"
            android:hint="동구" />

        <RadioButton
            android:id="@+id/loc4_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:enabled="false"
            android:hint="서구" />

        <RadioButton
            android:id="@+id/loc5_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:enabled="false"
            android:hint="중구" />

    </RadioGroup>

        <TextView
            android:id="@+id/contect_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loc_radio_btn_group"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="날짜(예: 1/9)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date_inp_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contect_info_txt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/slash"
            android:hint="월"
            android:text="(공백)" />

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25sp" android:text="/" android:id="@+id/slash" android:layout_below="@+id/contect_info_txt" android:layout_margin="10dp" android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/date_inp_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contect_info_txt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/slash"
            android:hint="일"
            android:text="(공백)" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_inp_txt1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="가격"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


        -<LinearLayout android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/price_inp_layout" android:layout_below="@id/price">

        <TextView
            android:id="@+id/price_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="예 : 10000"
            android:text="(공백)" />

        <TextView android:layout_height="match_parent" android:layout_width="wrap_content" android:textSize="20sp" android:text="원" android:layout_marginRight="20dp" android:gravity="center_vertical"/>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>