<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="* 입력된 정보는 펫시터에게 그대로 \n 보여지게 됩니다. 작성에 유의해주십시오."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dog_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="반려견 정보"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dog_name_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="이름" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dog_breed_inp_txt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="견종" />

            <EditText
                android:id="@+id/dog_age_inp_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="나이" />
        </LinearLayout>

        <TextView
            android:id="@+id/owner_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="견주 정보"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_name_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="이름" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <EditText
            android:id="@+id/user_age_inp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="10dp"
            android:hint="나이" />
    </LinearLayout>

    <TextView
        android:id="@+id/location_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="반려견을 위탁하고 싶은 위치"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/loc_radio_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="원하는 매칭 지역"
            android:layout_margin="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/user_address"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="상세주소" />

        <TextView
            android:id="@+id/contect_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="날짜"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--        <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/date_inp_txt1" android:layout_below="@id/contect_info_txt" android:hint="월" android:layout_margin="10dp" android:layout_toLeftOf="@+id/slash"/>-->

        <!--        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25sp" android:text="/" android:id="@+id/slash" android:layout_below="@+id/contect_info_txt" android:layout_margin="10dp" android:layout_centerHorizontal="true"/>-->

        <!--        <EditText android:layout_height="wrap_content" -->
        <!--            android:layout_width="wrap_content" -->
        <!--            android:id="@+id/date_inp_txt2" -->
        <!--            android:layout_below="@id/contect_info_txt" -->
        <!--            android:hint="일" -->
        <!--            android:layout_toRightOf="@+id/slash" -->
        <!--            android:layout_margin="10dp"/>-->

        <DatePicker
            android:layout_gravity="center"
            android:id="@+id/dataPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contect_info_txt"
            android:datePickerMode="spinner"
            android:layout_centerHorizontal="true"
            android:calendarViewShown="false"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:text="원하는 가격"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/price_inp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price_inp_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="예 : 10000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="원"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/extra_service_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_inp_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="추가 선택"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/service_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="픽업가능"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:layout_below="@id/extra_service_txt"/>

        <CheckBox
            android:id="@+id/service_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물이 없는 펫시터"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:layout_below="@id/service_check1"/>

        <CheckBox
            android:id="@+id/service_check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대형견 가능"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:layout_below="@id/service_check2"/>

        <CheckBox
            android:id="@+id/service_check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마당 있음"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="@color/common_google_signin_btn_text_light"
            android:layout_below="@id/service_check3"/>

        <Button
            android:id="@+id/next_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

    </LinearLayout>

</ScrollView>